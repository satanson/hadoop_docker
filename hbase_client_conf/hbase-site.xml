<configuration>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>

  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://grakrabackend/hbase</value>
  </property>

  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>zk0,zk1,zk2</value>
  </property>

  <property>
    <name>hbase.zookeeper.port</name>
    <value>2181</value>
  </property>

  <property>
    <name>zookeeper.znode.parent</name>
    <value>/hbase</value>
  </property>

  <property>
    <name>hbase.master.port</name>
    <value>6300</value>
  </property>

  <property>
    <name>hbase.master.info.port</name>
    <value>6305</value>
  </property>

  <property>
    <name>hbase.regionserver.port</name>
    <value>6310</value>
  </property>

  <property>
    <name>hbase.regionserver.info.port</name>
    <value>6315</value>
  </property>

  <property>
    <name>hbase.regionserver.handler.count</name>
    <value>32</value>
  </property>

  <property>
    <name>hbase.ipc.server.callqueue.read.ratio</name>
    <value>0.7</value>
  </property>

  <property>
    <name>hbase.ipc.server.callqueue.scan.ratio</name>
    <value>0.2</value>
  </property>

  <property>
    <name>hbase.coprocessor.master.classes</name>
    <value>org.apache.hadoop.hbase.rsgroup.RSGroupAdminEndpoint</value>
  </property>

  <property>
    <name>hbase.master.loadbalancer.class</name>
    <value>org.apache.hadoop.hbase.rsgroup.RSGroupBasedLoadBalancer</value>
  </property>

  <property>
    <name>phoenix.schema.isNamespaceMappingEnabled</name>
    <value>true</value>
  </property>

  <property>
    <name>phoenix.schema.mapSystemTablesToNamespace</name>
    <value>true</value>
  </property>

  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>

  <property>
    <name>hbase.region.replica.replication.enabled</name>
    <value>false</value>
  </property>

  <property>
    <name>hbase.regionserver.storefile.refresh.period</name>
    <value>10000</value>
  </property>

  <property>
    <name>hbase.ipc.client.allowsInterrupt</name>
    <value>true</value>
    <description>Whether to enable interruption of RPC threads at the client. The default value of true is
      required to enable Primary RegionServers to access other RegionServers in secondary mode. </description>
  </property>

  <property>
    <name>hbase.client.primaryCallTimeout.get</name>
    <value>10</value>
  </property>

  <property>
    <name>hbase.client.primaryCallTimeout.multiget</name>
    <value>10</value>
  </property>
</configuration>
